<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontSeeActionGroup">
        <annotations>
            <description>Validates that the provided text is present and correct.</description>
        </annotations>
        <arguments>
            <argument name="userInput" type="string"/>
            <argument name="fieldSelector" type="string"/>
        </arguments>

        <see userInput="{{userInput}}" selector="{{fieldSelector}}" stepKey="verifyMessage"/>
    </actionGroup>
</actionGroups>
