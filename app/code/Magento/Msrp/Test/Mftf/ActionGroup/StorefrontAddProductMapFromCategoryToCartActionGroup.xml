<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAddProductMapFromCategoryToCartActionGroup">
        <annotations>
            <description>Add product with minimum advertised price to cart from category page via MAP popup.</description>
        </annotations>

        <click selector="{{StorefrontCategoryMainSection.productMapPopupLink}}" stepKey="clickOnProductMapPopup"/>
        <waitForElementVisible selector="{{StorefrontProductMapPopupSection.addToCart}}" stepKey="waitForAddToCartOpenOnPopup"/>
        <click selector="{{StorefrontProductMapPopupSection.addToCart}}" stepKey="addToCartFromMapPopup"/>
    </actionGroup>
</actionGroups>
