<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontCartPriceRuleDescriptionTest">
        <annotations>
            <features value="SalesRule"/>
            <stories value="Create cart price rule"/>
            <title value="Cart Price Rule description output"/>
            <description value="Checking the output of the Cart Price Rule description"/>
            <severity value="MAJOR"/>
        </annotations>

        <before>
            <createData entity="ApiCartRule" stepKey="createSalesRule"/>
            <createData entity="_defaultCategory" stepKey="createCategory"/>
            <createData entity="SimpleProduct" stepKey="createProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
        </before>

        <after>
            <deleteData createDataKey="createSalesRule" stepKey="deleteSalesRule"/>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createProduct" stepKey="deleteProduct"/>
        </after>

        <actionGroup ref="AddSimpleProductToCartActionGroup" stepKey="addToCartFromStorefrontProductPage">
            <argument name="product" value="$createProduct$"/>
        </actionGroup>
        <actionGroup ref="ClickViewAndEditCartFromMiniCartActionGroup" stepKey="selectViewAndEditCart"/>
        <waitForElementVisible selector="{{CheckoutCartSummarySection.discountLabel}}" stepKey="waitForDiscountLabel"/>
        <see userInput="$$createSalesRule.description$$" selector="{{CheckoutCartSummarySection.discountLabel}}" stepKey="assertDiscountLabel"/>
    </test>
</tests>
